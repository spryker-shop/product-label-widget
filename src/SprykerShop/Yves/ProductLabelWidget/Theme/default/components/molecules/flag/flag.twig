{% extends model('component') %}

{% set config = {
    name: 'flag',
    tag: 'span'
} | merge(config | default({})) %}

{% set data = {
    text: data.text | default('')
} | merge(data | default({})) %}

{% block body %}
    <span class="{{config.name}}__text">
        {% include atom('icon') with {
            modifiers: ['small'],
            class: config.name ~ '__icon',
            data: {
                name: 'bookmark'
            }
        } only %}
        {{data.text}}
    </span>
{% endblock %}
